<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title "Beelab" %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon-precomposed" href="{{ asset('apple-touch-icon.png') }}">
        {% block stylesheets %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" rel="stylesheet">
            <link href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet">
            <link href="//getbootstrap.com/examples/sticky-footer-navbar/sticky-footer-navbar.css" rel="stylesheet">
        {% endblock %}
        {% stylesheets
            'css/app.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    </head>
    <body>
        <div class="container">
            <nav role="navigation" class="navbar navbar-default navbar-fixed-top navbar-inverse navbar-md">
                <div class="container">
                    <div class="navbar-header">
                        <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="{{ path('homepage') }}" class="navbar-brand" title="admin"><i class="fa fa-dashboard"></i></a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <div class="navbar-inner">
                            {# knp_menu_render('menu', {currentClass: 'active', template: '::menu.html.twig'}) #}
                        </div>
                    </div>
                </div>
            </nav>
            <div class="container">
                {# include "_flash.html.twig" #}
                {% block body '' %}
            </div>
        </div>
        <footer class="footer">
            <div class="container">
                <p class="text-muted">&copy; 2015 <a href="https://bee-lab.net">BeeLab</a></p>
            </div>
        </footer>
        {% block javascripts %}
            <script src="//code.jquery.com/jquery-2.1.4.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
            <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"></script>
        {% endblock %}
        {% javascripts
            'js/app.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
