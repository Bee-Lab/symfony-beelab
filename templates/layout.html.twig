<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title "Beelab" %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon-precomposed" href="{{ asset('apple-touch-icon.png') }}">
        {% block stylesheets %}
            <link href="//netdna.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
            <link href="//getbootstrap.com/docs/3.4/examples/sticky-footer-navbar/sticky-footer-navbar.css" rel="stylesheet">
            <link href="{{ asset('css/app.css') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ path('homepage') }}" class="navbar-brand" title="home"><i class="fa fa-home" aria-label="home"></i></a>
                </div>
                <div class="collapse navbar-collapse">
                    <div class="navbar-inner">
                        {# knp_menu_render('menu', {currentClass: 'active', template: '_menu.html.twig'}) #}
                    </div>
                </div>
            </div>
        </nav>
        <div class="container">
            {# include "_flash.html.twig" #}
            {% block body '' %}
        </div>
        <footer class="footer">
            <div class="container">
                <p class="text-muted">Â© 2019 <a href="https://github.com/bee-lab/">BeeLab</a></p>
            </div>
        </footer>
        {% block javascripts %}
            <script defer src="//use.fontawesome.com/releases/v5.9.0/js/all.js" data-auto-replace-svg="nest"></script>
            <script src="//code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="//netdna.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
            <script src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
