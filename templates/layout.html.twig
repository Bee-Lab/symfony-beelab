<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{% block title "Beelab" %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
        <link rel="apple-touch-icon-precomposed" href="{{ asset('apple-touch-icon.png') }}">
        {% block stylesheets %}
            <link href="{{ preload(asset('build/css/app.css'), {as: 'style') }}" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-default navbar-static-top navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ path('homepage') }}" class="navbar-brand" title="home">
                        <i class="fa fa-home" aria-label="home"></i>
                    </a>
                </div>
                <div class="collapse navbar-collapse">
                    <div class="navbar-inner">
                        {# knp_menu_render('menu', {currentClass: 'active'}) #}
                    </div>
                </div>
            </div>
        </nav>
        <div class="container">
            {# include '_flash.html.twig' #}
            {% block body '' %}
        </div>
        <footer class="footer">
            <div class="container">
                <p class="text-muted">Â© 2020 <a href="https://github.com/bee-lab/">BeeLab</a></p>
            </div>
        </footer>
        {% block javascripts %}
            <script src="{{ preload(asset('build/js/app.js'), {as: 'script'}) }}"></script>
        {% endblock %}
    </body>
</html>
