{% block date_widget -%}
    {%- set type = type|default('date') -%}
    <div class="input-group">
        {{- block('form_widget_simple') -}}
        <div class="input-group-append">
            <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
        </div>
    </div>
{%- endblock date_widget %}

